{%extends "layout.njk" %}
{%block head%}
  <title>Cursos | Rocketseat</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>

{% endblock %}
{% block content %}

  <div id="wrapper">
    <h1>Conteúdos</h1>
  </div>

  <section class="cards">
    <div class="card" id="starter">
      <div class="card-image-container">
        <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Starter-logo"/>

        <div class="card_content">
          <p>BootCamp Starter
          </p>
        </div>

        <div class="card_info">
          <p>5 Módulos</p>
          <p class="card_price">
            Gratuito
          </p>
        </div>

      </div>
    </div>

    <div class="card" id="launchbase">
      <div class="card-image-container">
        <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="LaunchBase-logo"/>
      </div>

      <div class="card_content">
        <p>BootCamp LaunchBase
        </p>
      </div>

      <div class="card_info">
        <p>22 Módulos</p>
        <p class="card_price">
          Pago
        </p>
      </div>

    </div>
  </div>

  <div class="card" id="gostack">
    <div class="card-image-container">
      <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="GoStack-logo"/>
    </div>

    <div class="card_content">
      <p>BootCamp GoStack
      </p>
    </div>

    <div class="card_info">
      <p>40 Módulos</p>
      <p class="card_price">
        Pago
      </p>
    </div>

  </div>
</section>

<div class="modal_overlay">
  <div class="modal">
    <a class="close-modal">
      <i class="material-icons">
        close
      </i>
    </a>

    <a class="maximize-modal">
      <i class="material-icons">
        maximize
      </i>
    </a>

    <div class="modal-content">
      <iframe src="" frameborder="0"></iframe>
    </div>
  </div>
</div>
<script src="scripts.js"></script>

{% endblock %}